#!/usr/bin/env bash
#

cmake=cmake

build_type="-DCMAKE_BUILD_TYPE=$(basename $(pwd) | sed 's/\W[a-zA-Z0-9]*//')"

install="-DCMAKE_INSTALL_PREFIX=/usr/"

/usr/bin/gfortran --version

$1 $cmake ../.. $build_type $install $2  \
	-DECLIB_SOURCE=$P4ROOT/odb_api/eclib \
	-DCMAKE_MODULE_PATH=$P4ROOT/odb_api/ecbuild/cmake \
	-DODB_API_MIGRATOR=OFF \
	-DBUILD_SHARED_LIBS=OFF \
	-DODB_API_FORTRAN=ON \
	-DODB_API_PYTHON=ON 
